<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <title>Blog Website</title>
  </head>
  <body class="bg-success-subtle">
    <div class="container">
      <h1 class="mb-4 mt-4 text-bg-secondary p-3">
        BHARAT INTERN BLOG WEBSITE
      </h1>

      <!-- Button to create a new article -->
      <a href="/articles/new" class="btn btn-success">Create Article</a>

      <!-- Loop through each article in the 'articles' array -->
      <% articles.forEach(article => { %>

      <!-- Card component to display article information -->
      <div class="card mt-4">
        <div class="card-body">
          <!-- Article title -->
          <h3 class="card-title"><%= article.title %></h3>

          <!-- Article creation date, formatted as a local string -->
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleString() %>
          </div>

          <!-- Article description -->
          <div class="card-text mb-2"><%= article.description %></div>
          <a href="/articles/<%= article.slug %>" class="btn btn-primary"
            >Read more</a
          >
          <a href="/articles/edit/<%= article.id%>" class="btn btn-info"
            >Edit</a
          >
          <form
            action="/articles/<%= article.id%>?_method=DELETE"
            method="POST"
            class="d-inline"
            onclick="return confirmDelete()"
          >
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% }) %>
      <!-- End of the loop -->
    </div>
    <script>
      function confirmDelete() {
        return confirm("Are you sure you want to delete this article?");
      }
    </script>
  </body>
</html>
